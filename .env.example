# User and Group IDs (run 'id -u' and 'id -g' to get your values)
PUID=1000
PGID=1000

# Timezone (https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
TZ=America/Vancouver

# Jellyfin Configuration
JELLYFIN_PUBLISHED_SERVER_URL=http://your-domain.com:8096

# Server Configuration
SERVER_HOST=your-server-ip-or-domain
ADMIN_EMAIL=admin@yourdomain.com

# IPTV Configuration
M3U_PLAYLIST_URL=http://your-iptv-provider.com/playlist.m3u
EPG_URL=http://your-iptv-provider.com/xmltv.php

# GitHub Integration (for automated deployment)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO=thecroxdevil/jellyfin-setup
GITHUB_BRANCH=main

# Notification Settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url
NOTIFICATION_EMAIL=notifications@yourdomain.com

# SSL/TLS Configuration
ENABLE_SSL=true
SSL_EMAIL=ssl@yourdomain.com
DOMAIN_NAME=your-domain.com

# Database Configuration (if needed for custom applications)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jellyfin_db
DB_USER=jellyfin_user
DB_PASSWORD=your_secure_password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=300  # seconds
